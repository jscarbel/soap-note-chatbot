# .editorconfig

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown files: don't trim trailing whitespace
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# YAML files: 2-space indent
[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

# JSON files: 2-space indent
[*.json]
indent_size = 2

# Makefiles use tabs, not spaces
[Makefile]
indent_style = tab
